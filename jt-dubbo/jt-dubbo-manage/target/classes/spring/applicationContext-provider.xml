<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns:dubbo="http://code.alibabatech.com/schema/dubbo"
	xsi:schemaLocation="http://www.springframework.org/schema/beans 
	http://www.springframework.org/schema/beans/spring-beans-2.5.xsd
	http://code.alibabatech.com/schema/dubbo 
	http://code.alibabatech.com/schema/dubbo/dubbo.xsd">
	
							
	<!-- 提供方应用信息，用于计算依赖关系 -->
	<dubbo:application name="jt-manage" />
	
	<!--  使用multicast广播注册中心暴露服务地址 -->
	<dubbo:registry address="zookeeper://192.168.233.141:2181"/>
	
	<!-- 用dubbo协议在20880端口暴露服务 -->  
	<dubbo:protocol name="dubbo" port="20883" />
	
	<!-- 声明需要暴露的服务接口 -->
	<dubbo:service interface="com.jt.dubbo.service.manage.FileUploadService" ref="fileUploadService" />
	<dubbo:service interface="com.jt.dubbo.service.manage.ItemCatService" ref="itemCartService" />
	<dubbo:service interface="com.jt.dubbo.service.manage.UserService" ref="userService" />
	<dubbo:service interface="com.jt.dubbo.service.ItemService" ref="itemService" />
	

	<!-- 具体的实现bean -->
	<bean id="fileUploadService" class="com.jt.manage.service.FileUploadServiceImpl" />
	<bean id="itemCartService" class="com.jt.manage.service.ItemCatServiceImpl" />
	<bean id="userService" class="com.jt.manage.service.UserServiceImpl" />
	<bean id="itemService" class="com.jt.manage.service.ItemServiceImpl" />
</beans>